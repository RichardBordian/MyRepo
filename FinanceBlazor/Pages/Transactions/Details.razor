@page "/transactions/details/{id:int}"

<PageTitle>Details</PageTitle>

<MudTh>Name: @transaction?.Name</MudTh>
<MudTh>Price: @transaction?.Price</MudTh>
<MudTh>Date: @transaction?.Date.ToShortDateString()</MudTh>
<MudTh>Storage: @transaction?.Storage.Name</MudTh>
<MudTh>Category: @transaction?.Category.Name</MudTh>
<MudTh>Description: @transaction?.Description</MudTh>

@code
{
    [Parameter]
    public int id { get; set; }
    private readonly TransactionServices _transactionServices = new TransactionServices();
    TransactionViewDTO? transaction;

    protected override async Task OnInitializedAsync()
    {
        transaction = await _transactionServices.GetByIdAsync(id);
    }
}